<Window x:Class="intsis.Create_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intsis"
        mc:Ignorable="d"
        Title="Create" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Название" HorizontalAlignment="Left" Margin="32,22,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="160,26,0,0" TextWrapping="Wrap" Name="NameI" VerticalAlignment="Top" Width="120"/>
        <Button Content="Создать/Редактировать" HorizontalAlignment="Left" Name="Create" Margin="32,53,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.24,0.098" Height="19" Width="248" Click="Create_Click"/>
        <DataGrid x:Name="Dg" AutoGenerateColumns="False" Margin="0,115,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn FontSize="20"  Header="ID" Binding="{Binding IDRule}" IsReadOnly="True"/>
                <DataGridTextColumn FontSize="20" Width="800" Header="Вопрос" Binding="{Binding Text}"/>
                <DataGridTextColumn Header="Прио" Binding="{Binding IDRule}" Visibility="Hidden"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Обновить вопросы" HorizontalAlignment="Left" x:Name="Create_Copy" Margin="32,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.24,0.098" Height="19" Width="248" Click="Create_Copy_Click"/>
        <Button Content="Добавить ответы" HorizontalAlignment="Left" x:Name="Ans" Margin="377,53,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.24,0.098" Height="19" Width="248" Click="C"/>


    </Grid>
</Window>
