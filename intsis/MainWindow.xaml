<Window x:Class="intsis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intsis"
        mc:Ignorable="d"
        Title="ИнтСис" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="Dg" AutoGenerateColumns="False" Margin="0,148,0,0" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn FontSize="20"  Header="ID" Binding="{Binding ID}" IsReadOnly="True"/>
                <DataGridTextColumn FontSize="20" Header="Название" Binding="{Binding Name}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Открыть" HorizontalAlignment="Left" Margin="23,45,0,0" VerticalAlignment="Top" Height="69" Width="123" x:Name="Open" Grid.ColumnSpan="2" Click="Open_Click" />
        <Button Content="Создать" HorizontalAlignment="Left" Margin="179,45,0,0" VerticalAlignment="Top" Height="69" Width="127" x:Name="Create" Click="Create_Click"/>

    </Grid>
</Window>
