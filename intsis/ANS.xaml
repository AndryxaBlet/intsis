<Window x:Class="intsis.ANS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intsis"
        mc:Ignorable="d"
        Title="ANS" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="Dg" AutoGenerateColumns="False" Margin="0,115,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn FontSize="20" Width="30" Header="ID" Binding="{Binding ID}" IsReadOnly="True"/>
                <DataGridTextColumn FontSize="20" Width="*" Header="Ответ" Binding="{Binding Ans}"/>
                <DataGridTextColumn Header="Следующее правило" Width="*" Binding="{Binding NextR}"/>
                <DataGridTextColumn Header="Рекомендации" Width="*"  Binding="{Binding Rec}"/>
                <DataGridTextColumn Header="Прио" Binding="{Binding IDRule}" Visibility="Hidden"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="92,64,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
